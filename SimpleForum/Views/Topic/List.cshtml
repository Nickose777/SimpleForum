@using SimpleForum.Models.Topic
@model IEnumerable<TopicListModel>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatorLogin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfLastMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessagesCount)
        </th>
        <th></th>
    </tr>

@foreach (TopicListModel topic in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(model => topic.CreatorLogin)
        </td>
        <td>
            @Html.DisplayFor(model => topic.Title)
        </td>
        <td>
            @Html.DisplayFor(model => topic.Description)
        </td>
        <td>
            @Html.DisplayFor(model => topic.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(model => topic.DateOfLastMessage)
        </td>
        <td>
            @Html.DisplayFor(model => topic.MessagesCount)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = topic.Id })
        </td>
    </tr>
}

</table>
